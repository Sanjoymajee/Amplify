<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>WhatsApp Chatroom</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <style>
      body {
        background-color: #12181b;
        color: hsl(209, 28%, 39%);
      }
      .row {
        margin-top: 50px;
      }
      .message {
        padding: 10px;
        margin: 10px;
        border-radius: 10px;
        /* background-color: hsl(209, 61%, 8%); */
        /* color: hsl(209, 28%, 39%); */
      }
      .message p {
        margin: 0;
      }
      .message--sent {
        /* width: max-content; */
        background-color: hsl(209, 61%, 8%);
        color: hsl(208.9, 73.6%, 28.2%);
      }
      .message--received {
        background-color: hsl(208.9, 73.6%, 28.2%);
        color: hsl(208.8, 61%, 8%);
      }
      #chatroom {
        height: 400px;
        overflow-y: auto;
      }
      .card-header {
        border: 0;
        background-color: #12181b;
        color: hsl(209, 28%, 39%);
      }
      .card-body {
        border: 0;
        background-color: hsl(209, 61%, 16%);
        color: hsl(209, 28%, 39%);
      }
      .card-footer {
        border: 0;
        background-color: #12181b;
        color: hsl(209, 28%, 39%);
      }
      .form-control {
        border: 0;
        background-color: hsl(209, 61%, 16%);
        color: hsl(209, 28%, 39%);
      }
      input[type="text"]:focus {
        outline: none;
        background-color: hsl(209, 61%, 16%);
        color: hsl(209, 55%, 66%);
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row flex flex-row justify-content-center">
        <div class="col-9">
          <div class="card">
            <div class="card-header">
              <h4 id="friendUsername"><%= friendUsername %></h4>
              <p id="username" style="display: hidden;"><%= user.username %></p>
            </div>
            <div class="card-body" id="chatroom">
              <% if(messages.length === 0) { %>
              <div class="row" id="noMessages">
                <div class="col-12">
                  <p>There are no messages yet.</p>
                </div>
              </div>
              <% } else {%> <% for (let i = 0; i < messages.length; i++) { %>
                <div class="message <%= (messages[i].sender.username === user.username) ? 'message--sent' : 'message--received' %>">
                  <p><%= messages[i].sender.username %> : <%= messages[i].message %></p>
                </div>
              <% } %> <% } %>
            </div>
            <div class="card-footer">
              <!-- <form method="POST" action="/chat/<%=friendUsername%>"> -->
                <div class="input-group">
                  <input type="text" name="message" id="message" class="form-control" placeholder="Type your message..." />
                  <div class="input-group-append">
                    <button class="btn btn-primary" type="submit" id="send">Send</button>
                  </div>
                </div>
              <!-- </form> -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/sendMessages.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  </body>
</html>
